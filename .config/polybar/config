[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-focused = %index%
label-focused-foreground = ${colors.blue}
label-focused-background = ${colors.background-lalt}
label-focused-underline= ${colors.blue}
label-focused-padding = 2
label-unfocused = %index%
label-unfocused-background = ${colors.background-alt}
label-unfocused-underline = ${colors.blue}
label-unfocused-padding = 2
label-visible = %index%
label-visible-background = ${colors.background-alt}
label-visible-underline = ${colors.dark-blue}
label-visible-padding = ${self.label-focused-padding}
label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-padding = 2
label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.red}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 1
format-connected-underline = ${colors.green}
label-connected = %local_ip%
format-disconnected = üê¨So long, thanks for the fishüêü
format-disconnected-underline = ${colors.red}

[module/cpu]
type = internal/cpu
interval = 1
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage:2%%
label-padding-left = 2

[module/cputemp]
type = internal/temperature
interval = 1
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input
base-temperature = 30
warn-temperature = 70
units=true
format = <label>
format-warn = <label-warn>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.red}
format-warn-underline = ${colors.red}

[module/gputemp]
type = custom/script
exec = nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits
tail = true
interval = 5
label = %output%¬∞C
label-padding-right = 2

[module/filesystem]
type = internal/fs
interval = 10
mount-0 = /
label-mounted = %free%
format-mounted = <label-mounted>

[module/memory]
type = internal/memory
interval = 3
label = %gb_free%

[module/date]
type = internal/date
interval = 1
date = %A %d-%b-%Y
label = %date%
label-padding-left = 2

[module/time]
type= internal/date
interval = 1
time = %T
label = %time%
label-underline = ${colors.blue}

